source 'https://rubygems.org'
ruby '2.1.2'

gem 'rails', '3.2.15'
gem 'rb-readline'                 # Needed on the server...
gem 'mysql2'                      # Mysql Database support
gem 'searchkick'                  # Search engine
gem 'devise'                      # Authentication
gem "therubyracer"                # Call JS from Ruby
gem "less-rails"                  # Sprockets (what Rails 3.1 uses for its asset pipeline) supports LESS
gem "twitter-bootstrap-rails"     # Twitter bootstrap gem
gem 'sass-rails',   '~> 3.2.3'    # CSS preprocessor for rails
gem 'coffee-rails', '~> 3.2.1'    # Better Javascript for Rails
gem 'uglifier', '>= 1.0.3'        # Uglifier/magnifier for rails code.
gem 'jquery-rails'                # Jquery for Rails.
gem 'jquery-datatables-rails'#, git: 'https://github.com/born4new/jquery-datatables-rails'
gem 'prawn', :git => "https://github.com/prawnpdf/prawn.git" # PDF generation
gem 'whenever', :require => false # Cron jobs
gem 'bootstrap-datepicker-rails'  # Datepicker
gem 'kaminari'                    # Pagination
gem 'pry'                         # REPL replacement for irb
gem 'test-unit'

group :development do
	gem 'mina', require: false
end